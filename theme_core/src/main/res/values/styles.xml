<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
        <item name="md_color_button_text">@color/colorSecondary</item>
        <item name="md_corner_radius">@dimen/dialog_cornor_radius</item>
        <item name="md_font_title">@font/quicksand_semibold</item>
        <item name="md_font_body">@font/quicksand_semibold</item>
        <item name="md_font_button">@font/quicksand_semibold</item>
    </style>

    <style name="DialogAnimation" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="MonthPickerDialogStyle">
        <item name="monthBgColor">@color/baseBackgroundColor</item>
        <item name="monthBgSelectedColor">@color/colorSecondary</item>
        <item name="monthFontColorSelected">@color/baseBackgroundColor</item>
        <item name="monthFontColorNormal">@color/textColorLight</item>
        <item name="monthFontColorDisabled">@color/btnDisableColor</item>

        <item name="headerBgColor">@color/white</item>
        <item name="headerFontColorSelected">@color/textColorDark</item>
        <item name="headerFontColorNormal">@color/textColorLightWhite</item>
        <item name="headerTitleColor">@color/textColorDark</item>

        <item name="dialogActionButtonColor">@color/colorSecondary</item>
    </style>

    <style name="Font.QuickSandMedium" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="Font.QuickSandRegular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="Font.QuickSandSemiBold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/quicksand_semibold</item>
    </style>

    <style name="Font.QuickSandBold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="Font.TimeNewRomanRegularItalic" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/times_new_roman_corsivo</item>
    </style>

    <style name="HeaderStyle" parent="Font.QuickSandMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TitleBarText" parent="Font.QuickSandSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextError" parent="Font.QuickSandMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorRed</item>
    </style>

    <style name="TextRegular" parent="Font.QuickSandRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextBold" parent="Font.QuickSandBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextSemiBold" parent="Font.QuickSandSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="TextMedium" parent="Font.QuickSandMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="ActionHighLight">
        <item name="colorControlActivated">
            @color/textColorLight
        </item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <declare-styleable name="currencyEditText">
        <attr name="groupDivider" format="string" />
        <attr name="monetaryDivider" format="string" />
        <attr name="locale" format="string" />
        <attr name="showSymbol" format="boolean" />
        <attr name="eraseWhenZero" format="boolean" />
        <attr name="decimalPoints" format="integer" />
    </declare-styleable>

    <!--    Signup Home-->
    <style name="TextButton" parent="Font.QuickSandSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingStart">@dimen/contain_padding</item>
        <item name="android:paddingEnd">@dimen/contain_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/btn_text_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/link_text_color_selector</item>
    </style>

    <style name="EditTextStyle" parent="Font.QuickSandMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/input_text_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">@dimen/contain_padding</item>
        <item name="android:paddingEnd">@dimen/contain_padding</item>
        <item name="android:paddingBottom">@dimen/contain_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="paddingStart">0dp</item>
        <item name="android:textColor">@drawable/textcolor_gray_selector</item>
        <item name="android:background">@drawable/bg_new_edittext_selector</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PrimaryButton" parent="Font.QuickSandSemiBold">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:background">@drawable/btn_primary_selector</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/btn_primary_text_color_selector</item>
    </style>

    <style name="LinkButton" parent="Font.QuickSandSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/link_text_color_selector</item>
    </style>

    <style name="EditTextStyle.Password" parent="EditTextStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditTextStyle.Email" parent="EditTextStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditTextStyle.Name" parent="EditTextStyle">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="EditTextStyle.PhoneNumber" parent="EditTextStyle">
        <item name="android:inputType">phone</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="textAllCaps">false</item>
        <item name="tabTextAppearance">@style/TextMedium</item>
        <item name="tabSelectedTextColor">@color/colorSecondary</item>
        <item name="tabTextColor">@color/textColorLight</item>
    </style>


    <style name="RoundCornerAvatarSmall">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:src">@drawable/img_company_place_holder</item>
        <item name="riv_corner_radius">@dimen/photo_radius</item>
    </style>

    <style name="RoundCornerAvatarLarge">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:src">@drawable/img_company_place_holder</item>
        <item name="riv_corner_radius">@dimen/photo_radius</item>
    </style>

    <style name="CircleAvatarXSmall" parent="CircleAvatarSmall">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="CircleAvatarSmall">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:src">@drawable/ic_user_avatar</item>
        <item name="riv_oval">true</item>
        <item name="riv_border_width">1dp</item>
        <item name="riv_border_color">@color/white</item>
        <item name="statusSize">12dp</item>
        <item name="statusMargin">2dp</item>
    </style>

    <style name="CircleAvatarMedium" parent="CircleAvatarSmall">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="CircleAvatarLarge" parent="CircleAvatarSmall">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
    </style>

    <style name="EditTextStyle.Search" parent="Font.QuickSandMedium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:drawableStart">@drawable/ic_search_hint_24dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:background">@drawable/bg_search_box</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BorderButton" parent="Font.QuickSandSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingStart">@dimen/contain_padding</item>
        <item name="android:paddingEnd">@dimen/contain_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/btn_border_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/link_text_color_selector</item>
    </style>

    <style name="BorderButtonDelete" parent="Font.QuickSandSemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingStart">@dimen/contain_padding</item>
        <item name="android:paddingEnd">@dimen/contain_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/link_text_color_selector</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_top_corner_white</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ButtonFilter">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/bg_ripple_oval_border_dark</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">@color/textColorGray</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/ic_filter</item>
    </style>

    <style name="BorderButton.Small" parent="BorderButton">
        <item name="android:layout_height">@dimen/small_button_height</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <declare-styleable name="InputFieldView">
        <attr name="cifInputType" format="enum">
            <enum name="Text" value="0" />
            <enum name="Email" value="1" />
            <enum name="Name" value="2" />
            <enum name="Number" value="3" />
            <enum name="Currency" value="4" />
            <enum name="Password" value="5" />
        </attr>
        <attr name="cifEndIconType" format="enum">
            <enum name="None" value="0" />
            <enum name="PasswordToggle" value="1" />
            <enum name="Clear" value="2" />
        </attr>

        <attr name="cifImeOption" format="enum">
            <enum name="Default" value="0" />
            <enum name="Next" value="1" />
            <enum name="Done" value="2" />
            <enum name="Search" value="3" />
        </attr>

        <attr name="cifIcon" format="reference" />
        <attr name="cifRequired" format="boolean" />
        <attr name="cifEndIcon" format="reference" />
        <attr name="cifHint" format="string" />
        <attr name="cifText" format="string" />
        <attr name="cifSingleLine" format="boolean" />
        <attr name="cifErrorDefault" format="string" />
        <attr name="cifMaxLines" format="integer" />
        <attr name="cifRequestFocus" format="boolean" />
        <attr name="cifValidationRegex" format="reference" />
        <attr name="cifInvalidRegexError" format="reference" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="etv_animationDuration" format="integer" />
        <attr name="etv_collapsedLines" format="integer" />
        <attr name="etv_expandedLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="CustomRatingBar">
        <attr name="crbMinRating" format="float" />
        <attr name="crbStep" format="float" />
    </declare-styleable>

    <declare-styleable name="TermConditionTextView">
        <attr name="buttonText" format="string" />
    </declare-styleable>

    <declare-styleable name="UserAvatarLayout">
        <attr name="statusSize" format="dimension" />
        <attr name="statusMargin" format="dimension" />
    </declare-styleable>

    <style name="Tag" parent="TextBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_tag_item</item>
        <item name="android:padding">@dimen/horizontal_space_medium</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@drawable/text_round_checkbox_selector</item>
    </style>
</resources>
